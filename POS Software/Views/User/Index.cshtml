@model IEnumerable<UserRolesVM>

<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Users Data</h5>            

            <!-- Modal for Show User -->
            <div class="modal fade" id="userShowModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <form method="post" id="showUserForm">
                            <input type="hidden" id="showUserId" name="Id" />
                            <div class="modal-header">
                                <h5 class="modal-title" id="userModalLabel">
                                    <span>Show User</span>
                                </h5>
                                <button type="button" style="box-shadow: none" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="showName" class="form-label fw-bold ms-1">Name</label>
                                        <input type="text" class="form-control" id="showName" name="Name" required disabled placeholder="Name" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="showEmail" class="form-label fw-bold ms-1">Email</label>
                                        <input type="email" class="form-control" id="showEmail" name="Email" required disabled placeholder="Email" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="showRole" class="form-label fw-bold ms-1">Role</label>
                                        <input type="text" class="form-control" id="showRole" name="Role" required disabled placeholder="Role" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="showDivision" class="form-label fw-bold ms-1">Division</label>
                                        <input type="text" class="form-control" id="showDivision" name="Division" required disabled placeholder="Division" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="showCity" class="form-label fw-bold ms-1">City</label>
                                        <input type="text" class="form-control" id="showCity" name="City" required disabled placeholder="City" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="showStreetAddress" class="form-label fw-bold ms-1">Street Address</label>
                                        <textarea type="text" class="form-control" id="showStreetAddress" name="StreetAddress" required disabled placeholder="Street Address"></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="showPostalCode" class="form-label fw-bold ms-1">Postal Code</label>
                                        <input type="text" class="form-control" id="showPostalCode" name="PostalCode" required disabled placeholder="Postal Code" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="showPhoneNumber" class="form-label fw-bold ms-1">Phone Number</label>
                                        <input type="text" class="form-control" id="showPhoneNumber" name="PhoneNumber" required disabled placeholder="Phone Number" />
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Dismiss</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>



            <!-- Modal for Delete User -->
            <div class="modal fade" id="userDeleteModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content text-center p-4">
                        <form asp-controller="User" asp-action="Delete" method="post" id="deleteUserForm">
                            <!-- Icon and Message -->
                            <div class="modal-body">
                                <!-- Warning Icon (using Font Awesome) -->
                                <div class="mb-3">
                                    <i class="fas fa-exclamation-circle" style="font-size: 50px; color: #f0ad4e;"></i>
                                </div>

                                <!-- Main Confirmation Message -->
                                <h5 class="modal-title mb-2" id="userModalLabel">Are you sure?</h5>

                                <!-- Subtext -->
                                <p class="text-muted">You won't be able to revert this!</p>

                                <!-- Hidden Field for Email -->
                                <input type="hidden" id="deleteUserEmail" name="Email" />
                            </div>

                            <!-- Action Buttons -->
                            <div class="modal-footer justify-content-center border-top-0">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger">Yes, delete it!</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


        </div>

        <div class="scrollable-table">
            <table id="userData" class="table table-bordered table-striped" style="width: 100%; min-width: 1300px;">
                <thead class="thead-light">
                    <tr>
                        <th></th>
                        <th>S/N</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Division</th>
                        <th>City</th>
                        <th>Street Address</th>
                        <th>Postal Code</th>
                        <th>Phone Number</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/user.js"></script>
}