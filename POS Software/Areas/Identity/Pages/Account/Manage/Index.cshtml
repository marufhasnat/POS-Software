@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <!-- Left Column for Name and Email -->
    <div class="col-md-12">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Name and Email Fields Side by Side -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.Name" class="form-control" placeholder="Please enter your name" />
                        <label asp-for="Input.Name" class="form-label"></label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" disabled placeholder="Please enter your email" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Phone Number, City -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number" />
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.Division" class="form-control" placeholder="Please enter your division" />
                        <label asp-for="Input.Division" class="form-label"></label>
                        <span asp-validation-for="Input.Division" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Other Fields (Division, Postal Code etc.) -->
            <div class="row mb-3">
                <div class="col-md-6">                    
                    <div class="form-floating">
                        <input asp-for="Input.City" class="form-control" placeholder="Please enter your city" />
                        <label asp-for="Input.City" class="form-label"></label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.PostalCode" class="form-control" placeholder="Please enter your postal code" />
                        <label asp-for="Input.PostalCode" class="form-label"></label>
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Street Address Field -->
            <div class="row mb-3">                
                <div class="col-md-6">                   
                    <div class="form-floating">
                        <input asp-for="Input.StreetAddress" class="form-control" placeholder="Please enter your street address" />
                        <label asp-for="Input.StreetAddress" class="form-label"></label>
                        <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Save Changes Button -->
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
