@page
@model LoginModel

@if (User.Identity.IsAuthenticated)
{
    <script>
        // Redirect the user if they are already logged in
        window.location.href = '@Url.Page("/Index")'; // Or another page like "/Dashboard"
    </script>
}
else{
    <div class="container py-5 animate__animated animate__fadeInDown">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card shadow-lg border-0 rounded">
                    <div class="card-header text-white text-center">
                        <div class="logo-container text-center">
                            <img src="~/img/logo.png" class="img-fluid" style="max-width: 200px;" alt="logo" />
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <form id="account" method="post" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            <div class="form-floating mb-4">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-4">
                                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-check mb-4">
                                <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    Remember me
                                </label>
                            </div>
                            <div class="d-grid">
                                <button id="login-submit" type="submit" class="btn btn-primary btn-lg btn-no-shadow">Log in</button>
                            </div>
                            <div class="text-center mt-4">
                                @* <p class="mb-1"> *@
                                @*     <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none text-primary">Forgot your password?</a> *@
                                @* </p> *@
                                @* <p class="mb-1"> *@
                                @*     <a href=""  class="text-decoration-none text-primary">Register as a new user</a> *@
                                @* </p> *@
                                @* <p> *@
                                @*     <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none text-primary">Resend email confirmation</a> *@
                                @* </p> *@
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
